#map-main {
  display: none;
  width: 0;
  height: 0;
  overflow: hidden; }

.container {
  background-color: #f6f6f6; }

.info {
  margin-top: .1rem;
  background-color: #fff; }
  .info.item {
    margin-top: 1px; }
  .info.inner {
    padding: .2rem .3rem; }
  .info.search {
    padding: .1rem .3rem; }

#main {
  position: relative;
  padding-top: 0.8rem;
  padding-top: 0;
  height: 100%; }

#menu-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 0.8rem;
  background-color: #fff; }
  #menu-box a {
    position: relative;
    height: 100%;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1; }
    #menu-box a:before {
      content: "";
      position: absolute;
      top: .2rem;
      bottom: .2rem;
      left: 0;
      border-left: 1px solid #f6f6f6; }
    #menu-box a:first-child:before {
      display: none; }
    #menu-box a.active {
      color: #3196fe;
      background-color: #e2f0ff; }

.tabbox {
  background-color: #f6f6f6; }

.list-box {
  padding: .1rem 0; }
  .list-box li {
    border-top: 1px solid #f6f6f6; }
    .list-box li:first-child {
      border-top: none; }

.shop-item {
  padding: .2rem .3rem;
  background-color: #fff; }
  .shop-item .content {
    padding-top: .05rem;
    margin-left: .2rem; }
  .shop-item .desc {
    text-align: justify; }
  .shop-item .txt {
    margin-right: auto;
    margin-bottom: .1rem; }
  .shop-item .txt2 {
    margin-bottom: .1rem; }

.avatar-box {
  position: relative; }
  .avatar-box.vip:before {
    content: "";
    position: absolute;
    top: .75rem;
    right: .05rem;
    width: .24rem;
    height: .24rem;
    background: url(/hfive/img/icon_vip.png) center/100% auto no-repeat;
    z-index: 2; }
