  <script>
    if (_config.is_wx) {
      checkFollow({
        success: function(data){
          if (data.data == 1) {
            $('#btn-confirm').off('click');
          } else {
            $('#btn-confirm').off('click').on('click', function(e){
              e.preventDefault();
              showConfirm({
                str: '扫码认识我',
                cover_close: true,
                node: '<img src="/hfive/img/chevhuzhu_qr_s.jpg" style="width:3rem;height:3rem;">',
                btn_close: true,
                btn_yes: {
                  str: null
                }
              });
            });
          }
        },
        complete: function() {
          configWXJSSDK(_config.wx_share, {
            success: function() {
              shareWX({
                title: _share_title,
                desc: _share_desc,
                link: _share_link
              })
            }
          })
        }
      });
    }
  </script>
