      {@/if}
    {@else if btn_join.num > 1}
      {@if btn_join.all_clear}
      <a id="btn-join" class="btn strong inhover close btn-join" href="/hfive/view/share.html"><p>邀请朋友加入</p></a>
      {@else}
      <a id="btn-join" class="btn strong inhover close btn-join" href="/hfive/view/car.html"><p>加入互助</p></a>
      {@/if}
    {@else}
    <a id="btn-join" class="btn strong inhover close btn-join" href="/hfive/view/car_add.html?from=index"><p>加入互助</p></a>
    {@/if}
