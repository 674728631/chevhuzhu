<html>
<head>
  <title>邀请好友</title>
  <meta charset="UTF-8">
<meta name="format-detection" content="telephone=no">
<meta name="viewport" content="width=320,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no">
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<link rel="shortcut icon" href="/favicon.ico">
<link rel="stylesheet" href="/hfive/css/base.css?v=9">
<script type="application/javascript" src="/hfive/lib/fastclick.js"></script>
<script>
  
  if ('addEventListener' in document) {
    document.addEventListener('DOMContentLoaded', function() {
      FastClick.attach(document.body);
    }, false);
  }
  var deviceWidth = document.documentElement.clientWidth;
  if(deviceWidth > 750) deviceWidth = 750;
  document.documentElement.style.fontSize = deviceWidth / 7.5 + 'px';
</script>
  <link rel="stylesheet" href="/hfive/css/share.css?v=3">
</head>
<body>
  <div class="navbar-top"><div class="navbar-content fbox-ac">
    <a class="navbar-left fbox-cc hover" href="javascript:history.go(-1);"><span class="arr arr-left arr-white"></span></a>
    <div class="navbar-center fbox-f1 tc fsize-18">邀请好友</div>
  </div></div>
  <div id="container" class="container nav-top full">
  <script type="text/template" id="main-tpl">
    <img src="/hfive/img/share_img_7.jpg" width="100%">
    <div id="main">
      <div class="content">
        <a id="car" class="shadow hide" href="javascript:;">
          <div id="spinner">
            <span id="sp-left"><i></i></span>
            <span id="sp-right"><i></i></span>
          </div>
          <div id="info" class="fsize-16">
            <p class="p1">可用救助额度</p>
            <p class="p2">￥<span id="money" class="fsize-22">0</span></p>
            <p class="p3" id="desc">立即领取</p>
          </div>
          <!--<div id="hand"></div>-->
          <div id="shadow"></div>
        </a>
        <div id="record" class="shadow">
          <div class="title fsize-16">我邀请的好友<div class="title-inner" text="我邀请的好友">我邀请的好友</div></div>
          <div id="avatar-box" class="fbox-ac fsize-14">
            {@each i in range(0, 4)}
            {@if list[i]}
            <div class="avatar-item"><div class="avatar"><img src="${list[i].head}" onload="resetImg(this)" onerror="setDefaultAvatar(this, 'default_avatar_2.png')"></div><p class="nickname n2 ellipsis">{@if list[i].nickname}${list[i].nickname}{@else if list[i].customerPN}${list[i].customerPN}{@else}　{@/if}</p></div>
            {@else}
            <div class="avatar-item fbox-f1"><div class="avatar"><img src="/hfive/img/default_avatar_3.png" onload="resetImg(this)" onerror="setDefaultAvatar(this, 'default_avatar_3.png')"></div><p class="nickname ellipsis">第${i+1}位</p></div>
            {@/if}
            {@/each}
          </div>
        </div>
        <div id="rule" class="tc fsize-18 txt-white">会员特权</div>
        <div id="rule2" class="tc"><img src="/hfive/img/share_img_8.jpg?2"></div>
        <!--<div id="rule" class="tc"><a id="btn-rule" class="hover fsize-16" href="javascript:;">活动规则 ＞</a></div>
        <div id="btn-box"><a id="btn-confirm" class="hover fsize-18" href="javascript:;">{@if list.length > 3}查看我的救助额度{@else}立即提升额度{@/if}</a></div>-->
        <div id="btn-box"><a id="btn-confirm" class="hover fsize-20" href="/hfive/view/share2.html">生成邀请海报</a></div>
      </div>
    </div>
  </script>
  </div>
  <script src="/hfive/lib/zepto.js"></script>
<script src="/hfive/lib/juicer.js"></script>
<script src="/hfive/js/common.js?v=41"></script>
<script>
  if (typeof WeixinJSBridge == "object" && typeof WeixinJSBridge.invoke == "function") {
    handleFontSize();
  } else {
    if (document.addEventListener) {
      document.addEventListener("WeixinJSBridgeReady", handleFontSize, false);
    } else if (document.attachEvent) {
      document.attachEvent("WeixinJSBridgeReady", handleFontSize);
      document.attachEvent("onWeixinJSBridgeReady", handleFontSize);
    }
  }

  function handleFontSize() {
    // 设置网页字体为默认大小
    WeixinJSBridge.invoke('setFontSizeCallback', { 'fontSize' : 0 });
    // 重写设置网页字体大小的事件
    WeixinJSBridge.on('menu:setfont', function() {
      WeixinJSBridge.invoke('setFontSizeCallback', { 'fontSize' : 0 });
    });
  }
</script>
  <script src="http://res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
  <script src="/hfive/js/share.js?v=9"></script>
</body>
</html>