#btn-logout {
  margin: 1rem 1rem 0; }

.container {
  background-color: #f6f6f6; }

.main {
  margin-top: .1rem;
  background-color: #fff; }

.list {
  position: relative;
  height: 1rem;
  padding: 0 .3rem;
  border-top: 1px solid #f6f6f6; }
  .list:nth-of-type(1) {
    border-top: none; }
  .list .arr {
    margin-left: .24rem; }

#avatar {
  height: 1.2rem; }

#avatar-upload {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1; }

#nickname {
  max-width: 750px;
  height: 1rem;
  border-radius: 0;
  background: #f5faff;
  border-top: 1px solid #d6eaff; }

#nickname-txt {
  margin-left: .2rem; }
