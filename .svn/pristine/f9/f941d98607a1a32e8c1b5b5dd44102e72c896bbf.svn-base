<body>
  <div class="navbar-top"><div class="navbar-content fbox-ac">
    <a class="navbar-left fbox-cc hover" href="javascript:history.go(-1);"><span class="arr arr-left arr-white"></span></a>
    <div class="navbar-center fbox-f1 tc fsize-18">评价</div>
    <a class="navbar-right fbox-cc hover" href="/hfive/view/index.html"><span class="i-con i-home"></span></a>
  </div></div>
  <div class="container nav full fsize-14">
    <script type="text/template" id="main-tpl">
    <div class="info top">
      <div class="content">
        <div class="fbox-ac"><img src="/hfive/img/icon_shop.png" style="margin-right:.2rem;width:.6rem;">${shopName}</div>
        <div class="spec fbox-ac fsize-12"><div class="avatar"><img src="${logo}" onload="resetImg(this)" onerror="setDefaultAvatar(this)"></div><p class="p1">维修技师：${repairmanName}</p><p class="p2">从业年限：${workYear}年</p></div>
        <div id="star-box" class="fbox-ac">
          <p>评分　</p>
          <span class="i-star hover empty"></span>
          <span class="i-star hover empty"></span>
          <span class="i-star hover empty"></span>
          <span class="i-star hover empty"></span>
          <span class="i-star hover empty"></span>
          <!--<p>　<span id="star">5</span>星</p>-->
        </div>
        <div id="tag-box" class="fbox wrap fsize-12">
          <a class="hover" href="javascript:;">服务好</a>
          <a class="hover" href="javascript:;">技术很棒</a>
          <a class="hover" href="javascript:;">很专业</a>
          <a class="hover" href="javascript:;">人很nice</a>
        </div>
        <div id="desc-box"><textarea id="desc" class="fsize-12" maxlength="150" placeholder="亲，请认真填写您的意见，我们工作人员将会认真审核，努力给您带来更好体验！"></textarea><p id="desc-status" class="tr">0/150</p></div>
      </div>
    </div>
    <div class="btn-wrap">
      <div class="btn-box fbox-ac">
        <a id="btn-confirm" class="btn strong hover" href="javascript:;">提交</a>
      </div>
    </div>
    </script>
  </div>
  <script src="/hfive/lib/zepto.js"></script>
<script src="/hfive/lib/juicer.js"></script>
<script src="/hfive/js/common.js?v=41"></script>
<script>
  if (typeof WeixinJSBridge == "object" && typeof WeixinJSBridge.invoke == "function") {
    handleFontSize();
  } else {
    if (document.addEventListener) {
      document.addEventListener("WeixinJSBridgeReady", handleFontSize, false);
    } else if (document.attachEvent) {
      document.attachEvent("WeixinJSBridgeReady", handleFontSize);
      document.attachEvent("onWeixinJSBridgeReady", handleFontSize);
    }
  }

  function handleFontSize() {
    // 设置网页字体为默认大小
    WeixinJSBridge.invoke('setFontSizeCallback', { 'fontSize' : 0 });
    // 重写设置网页字体大小的事件
    WeixinJSBridge.on('menu:setfont', function() {
      WeixinJSBridge.invoke('setFontSizeCallback', { 'fontSize' : 0 });
    });
  }
</script>
  <script src="http://res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
  <script src="/hfive/js/baoxian_score.js"></script>
</body>
</html>