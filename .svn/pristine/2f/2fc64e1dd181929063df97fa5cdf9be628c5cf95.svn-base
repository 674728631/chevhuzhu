              link: window.location.href.replace(/\?.*$/, '')
            })
          }
        })
      }
    };
    function enter(){
        if(isWeiXin() && /(Android)/i.test(navigator.userAgent)){
            showMask();
        }else if(/(Android)/i.test(navigator.userAgent)){
            window.location.href="http://www.chevhuzhu.com/app/android/chevhuzhugld.apk";
